{
  "name": "vscode-continue-inline-comments",
  "version": "1.1.0",
  "description": "Visual Studio Code extension to automatically continue inline comments. ðŸ’¬",
  "license": "Unlicense",
  "author": "Val (https://val.codejam.info)",
  "main": "dist/extension.js",
  "repository": "github:valeriangalliat/vscode-continue-inline-comments",
  "scripts": {
    "build": "npm run build-base -- --sourcemap",
    "build-base": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --external:jsonc-parser --format=cjs --platform=node",
    "lint": "ts-standard",
    "package": "vsce package",
    "type-check": "tsc -noEmit",
    "vscode:prepublish": "npm run build-base -- --minify",
    "watch": "npm run build -- --watch"
  },
  "dependencies": {
    "jsonc-parser": "^3.0.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/node": "^17.0.38",
    "@types/vscode": "^1.53.0",
    "esbuild": "^0.14.42",
    "escape-string-regexp": "^5.0.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.2"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "publisher": "val",
  "displayName": "Continue Inline Comments",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Continue Inline Comments",
      "properties": {
        "continueInlineComments.list": {
          "type": "array",
          "default": [
            {
              "comment": "//",
              "languages": [
                "php",
                "javascript",
                "typescript",
                "jsonc",
                "scss",
                "sass",
                "json",
                "vue",
                "markdown",
                "javascriptreact",
                "typescriptreact"
              ]
            },
            {
              "comment": "#",
              "languages": [
                "python",
                "ruby",
                "shellscript",
                "makefile"
              ]
            }
          ],
          "uniqueItems": true,
          "description": "Single Line Comments Patterns"
        }
      }
    }
  }
}
